# TODO: nm-applet, volume control.

# Docs: https://i3wm.org/docs/userguide.html
set $mod Mod4
set $alt Mod1

# Font for window titles. Will also be used by the bar unless a different font is used in the bar {} block below.
font pango:Ubuntu Sans Regular 11.5

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $alt+Return exec --no-startup-id alacritty
bindsym $alt+b exec --no-startup-id dm_urlbrowser 
bindsym $alt+a exec --no-startup-id dm_audioswitcher 
bindsym $alt+z exec dm_power 
bindsym $alt+c exec dm_screenshot 

# start a browser
# bindsym $alt+b exec chromium
# start a file browser
bindsym $alt+f exec thunar

# kill focused window
bindsym $alt+g kill

# change focus
bindsym $alt+h focus left
bindsym $alt+j focus down
bindsym $alt+k focus up
bindsym $alt+l focus right

# move focused window
bindsym $alt+Shift+h move left
bindsym $alt+Shift+j move down
bindsym $alt+Shift+k move up
bindsym $alt+Shift+l move right

# split in horizontal orientation
bindsym $alt+y split h
# split in vertical orientation
bindsym $alt+v split v

# enter fullscreen mode for the focused container
bindsym $alt+m fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
# bindsym $mod+s layout stacking
bindsym $alt+t layout tabbed
bindsym $alt+s layout toggle split

# toggle tiling / floating

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"

workspace_auto_back_and_forth yes
bindsym $alt+Tab workspace back_and_forth

# switch to workspace
bindsym $alt+q workspace number $ws1
bindsym $alt+w workspace number $ws2
bindsym $alt+e workspace number $ws3
bindsym $alt+i workspace number $ws4
bindsym $alt+o workspace number $ws5
bindsym $alt+p workspace number $ws6

# move focused container to workspace
bindsym Shift+$alt+q move container to workspace number $ws1
bindsym Shift+$alt+w move container to workspace number $ws2
bindsym Shift+$alt+e move container to workspace number $ws3
bindsym Shift+$alt+i move container to workspace number $ws4
bindsym Shift+$alt+o move container to workspace number $ws5
bindsym Shift+$alt+p move container to workspace number $ws6

# reload the configuration file
bindsym $alt+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $alt+Shift+r restart

# resize window (you can also use the mouse for that)
mode "resize" {
    # These bindings trigger as soon as you enter the resize mode
    # Pressing left will shrink the window’s width.
    # Pressing right will grow the window’s width.
    # Pressing up will shrink the window’s height.
    # Pressing down will grow the window’s height.
    bindsym l resize shrink width 10 px or 10 ppt
    bindsym k resize grow height 10 px or 10 ppt
    bindsym j resize shrink height 10 px or 10 ppt
    bindsym h resize grow width 10 px or 10 ppt

    # back to normal: Enter or Escape or $mod+r
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $alt+r mode "default"
}
bindsym $alt+r mode "resize"

# start dmenu (a program launcher)
bindsym $alt+d exec dmenu_run -fn 'Ubuntu Sans Regular-13'


# gaps settings
gaps inner 5px
gaps outer 5px
smart_gaps inverse_outer

# Hide title bars unless in tab mode
default_border pixel 3
default_floating_border pixel 3

# Audio bindings
bindsym $alt+1 exec pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym $alt+2 exec pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym $alt+3 exec amixer -D pulse sset Master 0%

# Startup things...
exec --no-startup-id xrandr --output HDMI-A-0 --auto --primary
exec --no-startup-id killall xfce4-panel

# Compositor
exec --no-startup-id killall picom
exec_always --no-startup-id compton --config ~/.config/picom/picom.conf &

# Wallpaper
exec --no-startup-id feh --bg-scale ~/Pictures/wallpapers/ghibli_one.jpg

########################################################
# Open specific applications in floating mode
########################################################
#for_window [title=".*mpv.*"] floating enable enable border pixel 0
#for_window [title="Thunar"] floating enable border pixel 0

######################################
# color settings for bar and windows #
######################################

focus_on_window_activation focus

# Define colors variables:
set $urgentred      #e53935
set $white	        #bfc4e0
set $black          #000000
set $darkgrey       #383c4a
set $grey           #b0b5bd
set $mediumgrey	    #8b8b8b
set $yellowbrown    #e1b700
set $blacktrans     #000000b2
set $lavender       #9192bb
set $darklavender   #3d3973

# define colors for windows:
#class		        	   border		bground		text		indicator	child_border
client.focused		    	$lavender	    $lavender	    $black		$mediumgrey	$mediumgrey
client.unfocused	    	$darklavender	$darklavender	$grey		$darkgrey	$darkgrey
client.focused_inactive		$darklavender	$darklavender	$grey		$black		$black
client.urgent		    	$urgentred	    $urgentred	    $white		$yellowbrown	$yellowbrown

############################################
# bar settings (input comes from i3blocks) #
############################################

# Start i3bar to display a workspace bar
# (plus the system information i3status finds out, if available)
bar {
    #status_command i3blocks -c ~/.config/i3/i3blocks.conf
	position top
	status_command i3status
	i3bar_command i3bar --transparency
	separator_symbol " | "
	workspace_min_width 36
	tray_padding 0

	colors {
		separator          $white
		background         $blacktrans
		statusline         $white

		# border bg txt indicator
		focused_workspace	$mediumgrey  $mediumgrey  $black  $blacktrans
		active_workspace	$blacktrans  $blacktrans  $white  $blacktrans
		inactive_workspace	$blacktrans  $blacktrans  $white  $blacktrans
		urgent_workspace	$urgentred   $urgentred   $whit   $blacktrans
	}
}
