{
    "workbench.startupEditor": "none",
    "security.workspace.trust.untrustedFiles": "open",
    "editor.fontLigatures": true,
    "editor.minimap.enabled": false,
    "editor.cursorBlinking": "smooth",
    "editor.cursorSmoothCaretAnimation": "on",
    "files.autoSave": "onWindowChange",
    // Vim extension settings
     "vim.smartRelativeLine": false,
     "vim.hlsearch": true,
     "vim.sneak": true,
     "vim.leader": "<space>",
     "vim.normalModeKeyBindings": [
        {
           "before": ["<leader>", "d"],
           "after": ["d", "d"]
        }
     ],
     "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["U"],
            "commands": ["redo"]
        },
        {
            "before": ["u"],
            "commands": ["undo"]
        },
        {
            "before": ["<leader>", "h"],
            "commands": [":nohl"]
        },
        {
            "before": ["<leader>", "e"],
            "commands": ["workbench.action.toggleSidebarVisibility"]
        },
        {
            "before": ["<leader>", "b"],
            "commands": ["workbench.action.toggleActivityBarVisibility"]
        }
     ],
     "vim.visualModeKeyBindings": [
        {
            "before": [">"],
            "after": [">", "g", "v"]
        },
        {
            "before": ["<"],
            "after": ["<", "g", "v"]
        },
        {
            "before": ["Tab"],
            "after": [">", "g", "v"]
        },
        {
            "before": ["<S-Tab>"],
            "after": ["<", "g", "v"]
        },
        {
            "before": ["J"],
            "after": ["workbench.action.moveLinesDownAction"]
        },
        {
            "before": ["K"],
            "after": ["workbench.action.moveLinesUpAction"]
        }
     ],
     "vim.visualModeKeyBindingsNonRecursive": [],
     "vim.handleKeys": {
         "<C-u": false,
         "<C-d": false,
         "<C-b>": false,
         "<C-a>": false,
         "<C-f>": false,
         "<C-p>": false,
         // Copy
         "<C-c>": false,
         // Cut
         "<C-x>": false,
         // Paste
         "<C-v>": false,
         "<C-z>": false,
         "<C-y>": false,
         "<C-j>": false,
         // VS Code new marker @ next occurence changed for scroll down
         "<C-d>": true,
    },
    "security.allowedUNCHosts": [
        "wsl.localhost"
    ],
    "editor.lineNumbers": "relative",
    "json.schemas": [
        
    ],
    // Vim extension settings end
}