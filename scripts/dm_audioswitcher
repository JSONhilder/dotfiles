#!/bin/bash

# Define the sink names
HEADPHONES="alsa_output.pci-0000_09_00.6.27.analog-stereo"
SPEAKERS="alsa_output.pci-0000_03_00.1.3.hdmi-stereo.2"

# Use dmenu to select between headphones and speakers
SELECTED_OUTPUT=$(echo -e "Headphones\nSpeakers" | dmenu -fn 'Ubuntu Sans Regular-11' -i -p "Select Audio Output:")

# Set the selected output
if [ "$SELECTED_OUTPUT" == "Headphones" ]; then
    pactl set-default-sink "$HEADPHONES"
    notify-send -h string:bgcolor:#bf616a "Audio switched to headphones!"
elif [ "$SELECTED_OUTPUT" == "Speakers" ]; then
    pactl set-default-sink "$SPEAKERS"
    notify-send -h string:bgcolor:#a3be8c "Audio switched to speakers!"
fi
